  title wycieczka
include header
br
br
.column-layout
  .main-column
    .main-column-one
        - var indeks = 0
        for wycieczka in wycieczki
            #zdjecie-2
                - var link = wycieczka.zdjecie
                img(src=link alt='Girl in a jacket' width='220')
            a#a.button(style = 'font-weight: bold; text-decoration: none; font-size: 20px;' href='strona?id='+indeks) #{wycieczka.tytul}
            p #{wycieczka.opis}
            #paragraf
                div Cena: #{wycieczka.cena}
                a#a.button(href='formularz?id='+indeks style='margin: 0 0 0 auto; text-decoration: none;' ) Zarezerwuj &gt;&gt; 
            - indeks = indeks + 1
            br
            br
            br
            br
            br
